
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "erro") %> proibem esse usuário de ser salvo</h2>

      <ul>
      <% @user.errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="font-size:20px;">
    <%= f.label :phone_number,"Entre o número do seu celular, por favor:" %><br />
  </br>
    <%= f.text_field :phone_number %>
  </div>

  <div class="actions" style="padding:10px;">
    <%= f.submit "Enviar" %>
  </div>
<% end %>
